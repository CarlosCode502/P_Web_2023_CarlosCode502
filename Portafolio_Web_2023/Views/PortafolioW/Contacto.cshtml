@model Portafolio_Web_2023.Models.ContactoViewModel

@{
    ViewData["Title"] = "Contacto - ";
    // Layout = null;
        
    Layout = "~/Views/Shared/_Layout_Contacto.cshtml";
}

<div class="imagen-correo-contacto">
    <img src="~/img/undraw_message.svg" alt="No image" width="30%" height="30%"/>
</div>

<h1>Enviame un correo</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Contacto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pb-4">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Escriba aquí su nombre." />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group pb-4">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="email@ejemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group pb-4">
                <label asp-for="Mensaje" class="control-label"></label>
                <textarea asp-for="Mensaje" class="form-control"></textarea>
                <span asp-validation-for="Mensaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


