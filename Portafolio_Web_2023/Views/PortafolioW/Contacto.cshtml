@model Portafolio_Web_2023.Models.ContactoViewModel

@{
    ViewData["Title"] = "Contacto - ";
    // Layout = null;

    Layout = "~/Views/Shared/_Layout_Contacto.cshtml";
}

<div class="text-center">
    @* style="width:300px;height:128px; *@
    @* Imagen obtenida de: https://undraw.co/illustrations *@
    <img class="img-fluid img-center mb-sm-3 mb-md-2 mb-lg-4" src="~/img/undraw_group_chat.svg" alt="undraw_group_chat.svg" title="chat grupal.svg" style="width:300px;" />

    <div class="text-uppercase mb-sm-2 mb-md-3 mb-lg-4">
        <h1 class="mb-0 card-title">Envíeme un correo</h1>
        <p class="mt-0" style="color: #9DA3A8">Proporcionado por la Web API de SendGrid</p>
    </div>
    @*     @Html.ValidationSummary *@
    <div class="row justify-content-center mt-sm-1 mt-md-2 mt-lg-3">
        <div class=" col-sm-6 col-md-9 col-lg-12">
            <form asp-action="Contacto" class="fw-bolder" method="post" autocomplete="off">
                @* <asp-route-returnurl="@ViewData["Index"]"></asp-route-returnurl> *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-sm-2 mb-md-3 mb-lg-4">
                    <label asp-for="Nombre" class="control-label fw-bold mb-sm-1 mb-md-2 mb-lg-3"></label>
                    <input asp-for="Nombre" class="form-control fw-normal mb-2 mb-sm-2 mb-md-2 mb-lg-2" placeholder="Ingrese su nombre." />
                    <span asp-validation-for="Nombre" class="text-danger fw-light mb-1 mb-sm-2 mb-md-2 mb-lg-2"></span>
                </div>
                <div class="form-group mb-sm-2 mb-md-3 mb-lg-4">
                    <label asp-for="Email" class="control-label fw-bold mb-sm-1 mb-md-2 mb-lg-3"></label>
                    <input asp-for="Email" class="form-control fw-normal mb-2 mb-sm-2 mb-md-2 mb-lg-2" placeholder="correo@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger fw-light mb-1 mb-sm-2 mb-md-2 mb-lg-2"></span>
                </div>

                <div class="form-group mb-sm-2 mb-md-3 mb-lg-4">
                    <label asp-for="ConfirmarEmail" class="control-label fw-bold mb-sm-1 mb-md-2 mb-lg-3"></label>
                    <input asp-for="ConfirmarEmail" class="form-control fw-normal mb-2 mb-sm-2 mb-md-2 mb-lg-2" placeholder="correo@gmail.com" />
                    <span asp-validation-for="ConfirmarEmail" class="text-danger fw-light mb-1 mb-sm-2 mb-md-2 mb-lg-2"></span>
                </div>
                <div class="form-group mb-sm-2 mb-md-3 mb-lg-4">
                    <label asp-for="Mensaje" class="control-label fw-bold mb-sm-1 mb-md-2 mb-lg-3"></label>
                    <textarea asp-for="Mensaje" class="form-control fw-normal mb-2 mb-sm-2 mb-md-2 mb-lg-2" placeholder="Escriba su mensaje."></textarea>
                    <span asp-validation-for="Mensaje" class="text-danger fw-light mb-1 mb-sm-2 mb-md-2 mb-lg-2"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@* Lo que debía escribir *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
