@{
    ViewData["Title"] = "Contacto - ";
    Layout = null;
}

<div class="modal">
    <h1>Formulario de Contacto</h1>

    <form asp-area="" asp-controller="PortafolioW" asp-action="Contacto">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            @* Básicamente se crea un label y un txtbox para ingreso de nombre (el for=nombre apunta el id al momento de hacer clic en este) *@
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba aquí su nombre." />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="nombre@ejemplo.com" />
        </div>
        <div class="mb-3">
            <label for="mensaje" class="form-label">Mensaje</label>
            <textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
