@*
    //V#62 Creando una Nueva Vista - Mostrando todos los proyectos.
*@

@*
    Importamos/Agregamos el IEnumerable(que contiene todos los proyectos)*@
@model IEnumerable<ProyectoViewModel>?

@* Si el modelo no es nulo has esto *@
@if (Model is not null)
{
    //Todo esto se diseña a través de boostrap en el ejemplo
    //VERIFICAR
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @* Dentro de este foreach ira una pequeña estructura html para que cada iteración se muestre en un diseño *@
            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenURL" class="card-img-top" alt="imagen proyecto" width="100" height="200" />
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text">@proyecto.Descripcion</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}